<%= render :partial => 'shared/order_tabs', :locals => {:current => "Shipments"} %>
<table class="admin-report">
  <tr>
    <th><%= t("Number") %></th>
    <th><%= t("Method") %></th>
    <th><%= t("Cost") %></th>
    <th><%= t("Tracking") %></th>
    <th><%= "#{t('Date')}/#{t('Time')}" %></th>
    <th><%= t("Action") %></th>
  </tr>
  <% @shipments.each do |shipment| %>
    <tr>
      <td><%= shipment.number %></td>
      <td><%= shipment.shipping_method.name if shipment.shipping_method %></td>
      <td><%= shipment.cost %></td>
      <td><%= shipment.tracking %></td>
      <td><%= shipment.shipped_at.to_s(:db) if shipment.shipped_at %></td>
      <td><%= link_to t('Edit'), edit_admin_order_shipment_url(@order, shipment) %></td>
    </tr>
  <% end %>
</table>

