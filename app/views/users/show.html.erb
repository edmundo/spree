<h1><%= t("my_account") %></h1>
<table>
  <tr>
    <td><%= t("email") %>:</td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
</table>
<%= link_to t('edit'), edit_object_url %>

<h1><%= t("my_addresses") %></h1>


<table width="545">
  <thead>
    <tr>
      <th style="white-space: nowrap; padding-right: 20px;"><%= t('name') %></th>
      <th style="width: 100%;"><%= t('address') %></th>
      <th style="text-align: center;"><%= t('action') %></th>
    </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td style="white-space: nowrap; padding-right: 20px;"><%= link_to address.full_name, edit_user_address_url(@user, address) %></td>
      <td>
        <%= "#{address.address1}#{!address.address2.empty? ? ', ' + address.address2 : ''},
          #{address.city} / #{address.state ? address.state.abbr : address.state_name}<br/>
          #{t('zip')}: #{address.zipcode}<br/>
          #{t('phone')}: #{address.phone}" %>
      </td>
      <td style="text-align: center;">
        <%= link_to(t('actions.destroy'), user_address_url(@user, address), :method => :delete, :confirm => t('are_you_sure_delete')) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to t('new_address'), new_user_address_url(@user) %>

<h1><%= t("my_orders") %></h1>
 
 
<table class="order-summary" width="545">
  <thead>
    <tr>
      <th><%= t("order_number") %></th>
      <th><%= t("order_date") %></th>
      <th><%= t("status") %></th>
      <th><%= t("customer") %></th>
      <th><%= t("total") %></th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= link_to order.number, order_url(order) %></td>
      <td><%=order.created_at.to_date%></td>
      <td><%= t(order.state).titleize %></td>
      <td><%= order.user.email if order.user %></td>
      <td><%= number_to_currency order.total %></td>
    </tr>
  <% end %>
  </tbody>
</table>
 
<br />
